<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/img_addToCard"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:src="@drawable/google"
            />
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView

                android:id="@+id/titlt_addToCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IPhone"
                android:textSize="25dp"
                android:textColor="#000"
                android:gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/description_addToCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The iPhone is a smartphone made by Apple that combines a computer, iPod, digital camera and cellular "
                android:textSize="15dp"
                android:textColor="#000"
                android:gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/prize_addToCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$500"
                android:textSize="25dp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:src="@drawable/add_circle_24"
                />
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            />
            <ImageView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:src="@drawable/exposure_neg_1_24"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>